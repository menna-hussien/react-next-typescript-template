{
  "name": "react-vite-typescript-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "env-cmd -e main,preprod next dev",
    "direct": "env-cmd -e main,direct vite",
    "uat": "env-cmd -e main,uat vite",
    "prod": "env-cmd -e main,prod vite",
    "build": "tsc -b && vite build",
    "build:dev": "env-cmd -e main,preprod vite build",
    "build-preview": "env-cmd -e main,prod vite build && vite preview",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "test": "jest",
    "test:coverage": "npm test --coverage --watchAll --collectCoverageFrom='src/**/*.{ts,tsx}'",
    "cy:open": "cypress open",
    "format": "prettier --write .",
    "depcheck": "depcheck . --config=.depcheckrc.json",
    "full-scan": "npm install && npm run format && npm run depcheck && npm run lint",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "next-dev": "next dev",
    "next-build": "next build",
    "next-start": "next start"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.6",
    "@types/react-spinner": "^0.2.3",
    "env-cmd": "^10.1.0",
    "i18next": "^23.11.5",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^14.1.2",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.24.1",
    "react-spinners": "^0.14.1",
    "styled-components": "^6.1.11",
    "styled-system": "^5.1.5",
    "vite-plugin-ssr": "^0.4.142"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transformer-svg": "^2.0.2",
    "sharp": "^0.33.4",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.3.1",
    "vite-plugin-image-optimizer": "^1.1.8",
    "vite-tsconfig-paths": "^4.3.2"
  }
}
